<div class="contents row4">

  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

        <div class="field">
        <%= f.label :nickname %> <em>(6 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>

<%if @sns_id.present? %>
   <%= hidden_field_tag :sns_auth, true %>
<% else %>
      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>

      <%= link_to "Sign Up By Facebook", user_facebook_omniauth_authorize_path, method: :post, class: "sns_login" %>
      <%= link_to "Sigh Up By Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "sns_login" %>

    <% end %>
  </div>
</div>